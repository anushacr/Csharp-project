@{
}
@model CityBusManagment.Entity.Model.RouteDetails


<form method="post" enctype="multipart/form-data">
    <h2>UPDATE ROUTE DETAILS</h2><hr />
    <div class="form-group">
        <label> ROUTE NO </label>
        <input type="text" asp-for="routeNo" class="form-control" placeholder="Enter route no" required />
    </div>
    <div class="form-group">
        <label>SOURCE </label>
        <input type="text" asp-for="source " class="form-control" placeholder="Enter source" required />
    </div>
    <div class="form-group">
        <label>DESTINATION</label>
        <input type="text" asp-for="destination" class="form-control" placeholder="Enter Destination" required />
    </div>


    <input type="submit" value="Save" class="btn btn-outline-success" />

    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>
<div>
    <a asp-controller="RouteDetails" asp-action="RouteDetails">View  List</a>
</div>