@model IEnumerable<CityBusManagment.Entity.Model.BusDetails>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="row">
    <div class="col-12">
        <div class="h2">
            BUS DETAILS
        </div>

        <hr />
        <table class="table table-light table-bordered table-hover">
            <thead>
                <tr>
                    <th>BUS ID  </th>
                    <th>BUS NAME</th>
                    <th>ARRIVAL TIME</th>

                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var busdetail in Model)
                {
                    <tr>
                        <td>@busdetail.busNo </td>
                        <td>@busdetail.busName.</td>
                        <td>@busdetail.arrivalTime</td>

                        <td><a asp-controller="BusDetails" asp-action="UpdateBusDetails" asp-route-busNo="@busdetail.busNo">Edit</a></td>
                        <td><a asp-controller="BusDetails" asp-action="DeleteBusDetails" asp-route-busNo="@busdetail.busNo">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
  